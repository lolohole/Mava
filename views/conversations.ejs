<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat Conversations</title>
  
  <style>
    .post-card {
      background-color: var(--post-bg-color);
      color: var(--post-text-color);
    }

    .chat-box {
      background-color: var(--chat-bg-color);
      color: var(--chat-text-color);
    }

    .notification {
      background-color: var(--notification-color);
    }

    .saved-post {
      background-color: var(--saved-posts-bg-color);
    }
  </style>
</head>
<body>
  <div class="chat-container">
    <h2>Chats</h2>
    <div class="conversations">

      <% conversations.forEach(conv => { 
           let other = null;
           if (conv.participants && Array.isArray(conv.participants)) {
             other = conv.participants.find(p => p && p._id && p._id.toString() !== user._id.toString());
           }
      %>
        <% if (other) { %>
          <div class="chat-item chat-box p-3 rounded mb-2" data-id="<%= other._id %>">
            <a href="/chat/<%= other._id %>" class="chat-link">
              <div class="avatar">
                <img src="<%= other.avatar %>" alt="<%= other.username %>" class="avatar-img">
              </div>
              <div class="chat-details">
                <strong><%= other.username %></strong>
                <p class="last-message"><%= conv.lastMessage %></p>
              </div>
            </a>
          </div>
        <% } else { %>
          <div class="chat-item p-3 mb-2 text-danger">⚠️ User data missing</div>
        <% } %>
      <% }) %>
    </div>

    <canvas id="interactiveCanvas"></canvas>
  </div>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f7fa;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      height: 100vh;
      padding-top: 50px;
    }

    .chat-container {
      width: 80%;
      max-width: 800px;
      margin: 0 auto;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      overflow: hidden;
      position: relative;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #4c6ef5;
    }

    .conversations {
      list-style: none;
      padding: 0;
      margin-bottom: 20px;
    }

    .chat-item {
      display: flex;
      align-items: center;
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 8px;
      background-color: #f9f9f9;
      transition: background-color 0.3s ease;
    }

    .chat-item:hover {
      background-color: #e3e9ff;
      cursor: pointer;
    }

    .chat-link {
      display: flex;
      align-items: center;
      text-decoration: none;
      color: #333;
      width: 100%;
    }

    .avatar {
      width: 50px;
      height: 50px;
      margin-right: 15px;
      border-radius: 50%;
      overflow: hidden;
    }

    .avatar-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .chat-details {
      flex-grow: 1;
    }

    .chat-details strong {
      font-size: 1.1rem;
      font-weight: bold;
    }

    .last-message {
      font-size: 0.9rem;
      color: #666;
    }

    canvas {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      opacity: 0.1;
      pointer-events: none;
    }

    header, .hidden-navbar {
      display: none;
    }
  </style>

  <script>
    const theme = <%- JSON.stringify(currentUser?.themeSettings || {}) %>;

    for (const [key, val] of Object.entries(theme)) {
      document.documentElement.style.setProperty('--' + key.replace(/([A-Z])/g, "-$1").toLowerCase(), val);
    }
  </script>  
</body>
</html>
