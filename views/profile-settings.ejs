<% layout = false %>
   <button id="toggleDarkMode" class="btn btn-dark">üåô Toggle Dark Mode</button>

<script>
  document.getElementById('toggleDarkMode').addEventListener('click', async () => {
    try {
      const res = await fetch('/settings/toggle-dark-mode', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      const data = await res.json();
      if (data.success) {
        document.body.classList.toggle('dark-mode', data.isDarkMode);
        // ÿßÿ≠ŸÅÿ∏ ÿßŸÑŸàÿ∂ÿπ ŸÅŸä localStorage (ÿßÿÆÿ™Ÿäÿßÿ±Ÿä)
        localStorage.setItem('darkMode', data.isDarkMode ? '1' : '0');
      } else {
        alert('Failed to toggle dark mode');
      }
    } catch (error) {
      console.error('Dark mode toggle error:', error);
    }
  });

  // ÿßÿ≥ÿ™ÿπÿßÿØÿ© ÿßŸÑŸàÿ∂ÿπ ŸÖŸÜ localStorage (ÿßÿÆÿ™Ÿäÿßÿ±Ÿä)
  if (localStorage.getItem('darkMode') === '1') {
    document.body.classList.add('dark-mode');
  }
</script>

