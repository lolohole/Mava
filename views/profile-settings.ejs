 <script>
  document.getElementById('themeForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
      const res = await fetch('/settings/update-theme', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await res.json();
      if (result.success) {
        Toastify({
          text: "‚úÖ Theme saved successfully!",
          duration: 3000,
          gravity: "top",
          position: "right",
          backgroundColor: "#28a745",
          stopOnFocus: true,
          close: true
        }).showToast();

        setTimeout(() => location.reload(), 3100);
      } else {
        Toastify({
          text: "‚ùå Failed to save theme.",
          duration: 3000,
          gravity: "top",
          position: "right",
          backgroundColor: "#dc3545",
          stopOnFocus: true,
          close: true
        }).showToast();
      }
    } catch (err) {
      console.error('Error saving theme:', err);
      Toastify({
        text: "‚ö†Ô∏è An error occurred while saving.",
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: "#ffc107",
        stopOnFocus: true,
        close: true
      }).showToast();
    }
  });
</script>

